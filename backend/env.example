# Configurações da aplicação
APP_NAME=IBMEC Authentication API
DEBUG=false
SECRET_KEY=your-secret-key-here

# Microsoft Azure Authentication
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-here
MICROSOFT_REDIRECT_URI=https://your-domain.com/api/v1/auth/callback

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# PostgreSQL Database Configuration
# Opção 1: URL completa do banco
DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require

# Opção 2: Configurações individuais (caso DATABASE_URL não esteja definida)
POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
POSTGRES_DB=your-database-name
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_PORT=5432

# Azure Container Apps (se aplicável)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
